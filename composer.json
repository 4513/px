{
    "name": "mibo/px",
    "type": "library",
    "description": "PHP Library for Permissions [RBAC]",
    "keywords": [
        "Permissions",
        "Authorization",
        "PX",
        "Auth",
        "Perms",
        "RBAC",
        "Role Based Access Control"
    ],
    "authors": [
        {
            "name": "Michal Boris"
        }
    ],
    "autoload": {
        "psr-4": {
            "MiBo\\PX\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MiBo\\PX\\Tests\\": [
                "tests/Core/",
                "tests/"
            ]
        }
    },
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.36"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-invoker": "^3.1",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6",
        "nette/neon": "^3.3"
    },
    "config": {
        "platform-check": true,
        "lock": false
    }
}
